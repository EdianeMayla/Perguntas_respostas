<%- include ('partials/header.ejs') %>
<body> 
  <%- include ('partials/navbar.ejs') %>

  <div class ="container">
      <hr>
      <h1>Assunto: <%= pergunta.titulo %></h1>
      
      <br>
      <h2>Pergunta: <%= pergunta.descricao %></h2>
      <hr>
      <form method="POST" action="/responder">
        <textarea placeholder="Digite a resposta" class="form-control" name="corpo"></textarea>
        <hr>
        <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
        <button type="button" onclick="window.location='/'" class =" btn btn-primary"><i class="bi-reply icon-flipped" style="margin-right: 5px;"></i>Voltar</button>
        <button type="submit" class =" btn btn-primary"><i class="bi-check" style="margin-right: 5px;"></i>Enviar</button>
      </form>
      <hr>
      <h3>Respostas:</h3>
      <hr>
      <% respostas.forEach(resposta => {%>
        <div class="card">
          <div class="card-body">
            <p><%= resposta.corpo %></p>
          </div>
        </div>
        <br>
        <form method="POST" action="/resposta/<%= resposta.id %>/<%= pergunta.id %>">
          <button class="btn btn-danger delete-button">Deletar</button>
        </form>
        <br>
     <% }) %>
  </div>
</body>

<%- include ('partials/footer.ejs') %>