<%- include ('partials/header.ejs') %>
<body> 
  <%- include ('partials/navbar.ejs') %>

  <div class ="container">
    <hr>
    <a href= "/perguntar" class="btn btn-primary">Perguntar</a>
    <hr>
    <h1><i class="bi-card-list" style="margin-right: 9px;"></i>Lista de Perguntas </h1>
    <hr>
    <% perguntas.forEach(pergunta => { %>
      <br>
      <div class="card">
        <div class="card-body">
          <h3>Assunto: <%= pergunta.titulo %></h3>
        </div>
        <div class="card-footer Delete-Res-button">
          <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-primary"><i class="bi-reply" style="margin-right: 5px;"></i>Responder</button></a>
          <form method="POST" action="/pergunta/delete">
            <input type="hidden" name="id" value="<%= pergunta.id %>">
            <button class="btn btn-danger delete-button">Deletar</button>
          </form>
          
        </div>
      </div>
   <% }) %>

  </div>
</body>
<%- include ('partials/footer.ejs') %>

